{% extends '_base.njk' %}
{% import '_form.njk' as forms %}

{% set scripts = ['https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js'] %}

{% block pagecontent %}
	{% call forms.form() %}
		{{ forms.heading('h1','Register') }}
		{{ forms.field('username','Name')}}
		{{ forms.field('password','Email')}}
		{{ forms.field('password','Phone number')}}
		{{ forms.field('password','Roll No')}}
		{{ forms.field('password','Username')}}
		{{ forms.field('password','Password')}}
		{{ forms.button('submit', 'Register') }}
	{% endcall %}
{% endblock %}

{% block customcss %}
	{{ forms.formCss() }}
	<style>
			form{
				box-shadow: 2px 2px 80px rgba(208, 39, 59, 0.378) ;
				font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
			}
			.item{
				margin-bottom:20px;
			}
			input{
				border:none;
				border-bottom:2px solid var(--light-gray);
				background:transparent;
				outline:none;
				transition:0.5s;
			}
			label{
				color:gray;
				position:absolute;
				bottom:0;
				left:10px;
			}
			input:valid ~ label,
			input:focus ~ label{
				color: rgb(239,74,74);
				transform: translateY(-35px);
				transition:0.5s;
			}
			input:valid,
			input:focus{
				border: 2px solid var(--light-gray);
				transition:0.5s;
				box-shadow: 5px 5px 17px rgb(119, 109, 116);
			}
			button:hover{
				width:50%;
				padding: 12px 7.5px;
				transition: .5s;
				background-color: rgba(255, 0, 0, 0.632);
				color: white;
				border-radius:14px;
				font-size:20px;
			}
	</style>
{% endblock %}

{% block customjs %}
	{{ forms.formFunction() }}
	<script>
		axios.defaults.withCredentials = true;
		axios.defaults.headers.common['X-CSRF-TOKEN'] = '{{ csrfToken }}';

		{# Other Functions #}
	</script>
{% endblock %}
