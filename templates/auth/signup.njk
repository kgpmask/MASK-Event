					<path d="M5 8a2 2 0 1 0 0-4 2 2 0 0 0 0 4Zm4-2.5a.5.5 0 0 1 .5-.5h4a.5.5 0 0 1 0 1h-4a.5.5 0 0 1-.5-.5ZM9 8a.5.5 0 0 1 .5-.5h4a.5.5 0 0 1 0 1h-4A.5.5 0 0 1 9 8Zm1 2.5a.5.5 0 0 1 .5-.5h3a.5.5 0 0 1 0 1h-3a.5.5 0 0 1-.5-.5Z"/>
					<path d="M2 2a2 2 0 0 0-2 2v8a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V4a2 2 0 0 0-2-2H2ZM1 4a1 1 0 0 1 1-1h12a1 1 0 0 1 1 1v8a1 1 0 0 1-1 1H8.96c.026-.163.04-.33.04-.5C9 10.567 7.21 9 5 9c-2.086 0-3.8 1.398-3.984 3.181A1.006 1.006 0 0 1 1 12V4Z"/>
				</svg>
				<div class="secondary-box">
					<input type="text" name="" id="" class="input-area" required="required">
					<span class="insider">Name</span>
					<i></i>
				</div>
			</div>
			<div class="box">
				<svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-envelope" viewBox="0 0 16 16">
					<path d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V4Zm2-1a1 1 0 0 0-1 1v.217l7 4.2 7-4.2V4a1 1 0 0 0-1-1H2Zm13 2.383-4.708 2.825L15 11.105V5.383Zm-.034 6.876-5.64-3.471L8 9.583l-1.326-.795-5.64 3.47A1 1 0 0 0 2 13h12a1 1 0 0 0 .966-.741ZM1 11.105l4.708-2.897L1 5.383v5.722Z"/>
				</svg>
				<div class="secondary-box">
					<input type="text" name="" id="" class="input-area" required="required">
					<span class="insider">Email</span>
					<i></i>
				</div>
			</div>
			<div class="box">
				<svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-phone" viewBox="0 0 16 16">
					<path d="M11 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h6zM5 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H5z"/>
					<path d="M8 14a1 1 0 1 0 0-2 1 1 0 0 0 0 2z"/>
				</svg>
				<div class="secondary-box">
					<input type="text" name="" id="" class="input-area" required="required">
					<span class="insider">Phone no.</span>
					<i></i>
				</div>
			</div>
			<div class="box">
				<svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-person" viewBox="0 0 16 16">
					<path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6Zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0Zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4Zm-1-.004c-.001-.256-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10Z"/>
				</svg>
				<div class="secondary-box">
					<input type="text" name="" id="" class="input-area" required="required">
					<span class="insider">Username</span>
					<i></i>
				</div>
			</div>
			<div class="box">
				<svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-unlock" viewBox="0 0 16 16">
					<path d="M11 1a2 2 0 0 0-2 2v4a2 2 0 0 1 2 2v5a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2V9a2 2 0 0 1 2-2h5V3a3 3 0 0 1 6 0v4a.5.5 0 0 1-1 0V3a2 2 0 0 0-2-2zM3 8a1 1 0 0 0-1 1v5a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V9a1 1 0 0 0-1-1H3z"/>
				</svg>
				<div class="secondary-box">
					<input type="password" name="" id="" class="input-area" required="required">
					<span class="insider">Password</span>
					<i></i>
				</div>
			</div>
			<div class="extra">
				<span>Already registered?<a href="#">Login</a></span>
			</div>
			<div class="button-area">
				<button class="btn" >Register</button>
			</div>
		</form>
	</div>
{% endblock %}


{% block customcss %}
	<style>
		.signup-card{
			width: 300px;
			height:550px;
			margin: 0px auto;
			padding: 10px 5px;
			text-align: center;
			border-radius: 14px;
			border:3px solid rgba(128, 128, 128, 0.571);
			box-shadow: 1px  1px 10px rgb(119, 109, 116);
			font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
		}
		.box{
			display: flex;
			gap:10px;
			align-items: center;
			text-align: left;
			padding: 10px 5px;
			margin: 30px auto;
		}
		.secondary-box{
			width:100%;
			display: flex;
			flex-direction: column;
			position: relative;
		}
		.button-area{
			margin: 30px auto;
			padding: 10px 5px;
		}
		.extra{
			padding: 5px 5px;
			font-size: x-small;
			margin-top: -20px;
			text-align:right;
		}
		.btn{
			padding:6px 5px;
			width:120px;
			border:none;
			border-radius:16px;
			margin-bottom:20px;
			font-size:18px;
			color: black;
			background-color: white ;
		}
		.input-area{
			padding: 7px 7px;
			border: none;
			border-radius: 5px;
			background: transparent;
			outline: none;
			color:black;
			transition: 0.5s;
			z-index: 10;
		}
		.insider{
			position: absolute;
			top: 7px;
			left: 5px;
			pointer-events: none;
			transition: 0.5s;
			color: lightgray;
			font-size: large;
		}
		.input-area:valid ~ span,
		.input-area:focus ~ span{
			color: red;
			transform: translateY(-28px) translateX(-3px);
			font-size: small;
		}
		i{
			width: 100%;
			position: absolute;
			left:0;
			bottom: 0;
			height:2px;
			background: red;
			border-radius: 4px;
			overflow: hidden;
			transition: 0.5s;
			pointer-events: none;
		}
		.input-area:valid ~ i,
		.input-area:focus ~ i{
			height:30px;
			background: white;
		}
		a{
			text-decoration: none;
			color:red;
		}
		a:hover{
			font-size: small;
			transition: 0.3s;
			text-decoration: underline;
		}
		.btn:hover{
			width:140px;
			padding: 9px 7.5px;
			transition: .5s;
			background-color: rgb(212, 67, 67);
			color: white;
		}
		.signup-card:hover{
			box-shadow: 10px 10px 150px rgba(208, 39, 59, 0.678) ;
			width: 320px;
			height: 570px;
			margin-top:-20px;
			transition: .5s ease-in-out;
		}
		.input-area:focus{
			box-shadow: 3px 3px 15px rgb(119, 109, 116);
			transition: 1.2s;
		}
	</style>
{% endblock %}
